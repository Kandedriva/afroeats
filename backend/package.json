{
  "name": "afro-eats-backend",
  "version": "1.0.0",
  "description": "Production-ready backend for Afro Eats restaurant ordering platform",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Backend build complete - no build step needed'",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch --runInBand --detectOpenHandles",
    "test:coverage": "NODE_ENV=test jest --coverage --runInBand --detectOpenHandles",
    "test:integration": "NODE_ENV=test jest --testPathPattern=integration --runInBand --detectOpenHandles",
    "migrate": "node -e \"console.log('Run migrations manually: psql -d your_db -f migrations/security_analytics.sql')\"",
    "seed": "node scripts/seed.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "security-check": "npm audit",
    "postinstall": "echo 'Backend dependencies installed with npm'"
  },
  "keywords": [
    "food-delivery",
    "restaurant",
    "nodejs",
    "express",
    "postgresql",
    "stripe"
  ],
  "author": "Afro Eats Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.859.0",
    "@aws-sdk/lib-storage": "^3.859.0",
    "bcryptjs": "^2.4.3",
    "connect-pg-simple": "^9.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.0",
    "express-validator": "^7.0.1",
    "geoip-lite": "^1.4.10",
    "helmet": "^7.2.0",
    "multer": "^2.0.2",
    "pg": "^8.11.5",
    "sharp": "^0.32.6",
    "stripe": "^18.4.0",
    "ua-parser-js": "^2.0.4",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@types/jest": "^30.0.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.16.0",
    "npm": ">=9.0.0"
  }
}
