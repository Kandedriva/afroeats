# ============================================
# OrderDabaly Backend - Environment Variables
# ============================================

# -------------------- Database --------------------
DATABASE_URL=postgresql://username:password@localhost:5432/orderdabaly

# -------------------- Stripe --------------------
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# -------------------- Email Notifications --------------------
# Choose your email provider (smtp, sendgrid, mailgun)
EMAIL_PROVIDER=smtp

# Option 1: Brevo (Recommended - 300 emails/day free)
# SMTP_HOST=smtp-relay.brevo.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-brevo-email@example.com
# SMTP_PASS=xsmtpsib-your-smtp-key-here
# SMTP_FROM_EMAIL=your-brevo-email@example.com

# Option 2: Gmail (Easy for testing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-16-char-app-password
SMTP_FROM_EMAIL=your-email@gmail.com

# Option 3: SendGrid
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=apikey
# SMTP_PASS=SG.xxxxxxxxxxxxxxxxxxxxx
# SMTP_FROM_EMAIL=noreply@yourdomain.com

# -------------------- SMS Notifications (Twilio) --------------------
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here_32_chars
TWILIO_PHONE_NUMBER=+1234567890

# -------------------- Frontend URL --------------------
FRONTEND_URL=http://localhost:3000

# -------------------- Server --------------------
PORT=5001
NODE_ENV=development
