# Test Environment Configuration
NODE_ENV=test
PORT=5002

# Test Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=afroeats_test
DB_USER=postgres
DB_PASSWORD=test_password
DATABASE_URL=postgresql://postgres:test_password@localhost:5432/afroeats_test

